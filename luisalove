<body>
    <div class="heart-container" id="heartContainer"></div>
    
    <div class="container">
        <div class="card">
            <div class="content">
                <div class="envelope">üíå</div>
                <h1>Happy Valentine's Day</h1>
                <div class="name">LUISA</div>
                
                <div class="rose-container">
                    <div class="rose">üåπ</div>
                    <div class="rose">üåπ</div>
                    <div class="rose">üåπ</div>
                </div>
                
                <div class="message">
                    Every moment with you feels like a beautiful dream come true.
                    You light up my world with your smile and fill my heart with endless joy.
                    Thank you for being the most amazing person in my life.
                </div>
                
                <div class="love-declaration">
                    I Love You More Every Day! ‚ù§Ô∏è
                </div>
                
                <div class="subtitle">
                    Forever yours, this Valentine's Day and always...
                </div>

                <!-- Photo Gallery Section -->
                <div class="gallery-section">
                    <div class="gallery-title">Our Beautiful Memories üì∏</div>
                    
                    <div class="gallery-container" id="galleryContainer">
                        <div class="photo-upload-area" id="uploadArea">
                            <div class="upload-icon">üì∑</div>
                            <div class="upload-text">
                                Click here to add our special photos<br>
                                <small>(Upload multiple photos)</small>
                            </div>
                        </div>
                        <div class="gallery-dots" id="galleryDots"></div>
                        <div class="gallery-controls hidden" id="galleryControls">
                            <button class="gallery-btn" id="prevBtn">‚Üê</button>
                            <button class="gallery-btn" id="playPauseBtn">‚è∏</button>
                            <button class="gallery-btn" id="nextBtn">‚Üí</button>
                        </div>
                    </div>
                    <div class="photo-counter" id="photoCounter"></div>
                    <input type="file" id="photoInput" accept="image/*" multiple class="hidden">
                </div>

                <!-- Music Player Section -->
                <div class="music-player">
                    <div class="music-title">üéµ Our Love Song</div>
                    <div class="music-controls">
                        <button class="music-btn" id="musicPlayBtn">‚ñ∂Ô∏è</button>
                        <div class="volume-control">
                            <span style="color: white;">üîä</span>
                            <input type="range" class="volume-slider" id="volumeSlider" min="0" max="100" value="70">
                        </div>
                    </div>
                    <button class="upload-music-btn" id="uploadMusicBtn">Upload Your Favorite Song üé∂</button>
                    <input type="file" id="musicInput" accept="audio/*" class="hidden">
                    <div class="photo-counter" id="musicName"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Photo Gallery Variables
        let photos = [];
        let currentPhotoIndex = 0;
        let slideshowInterval;
        let isPlaying = false;

        // Music Player Variables
        let audioPlayer = new Audio();
        let isMusicPlaying = false;

        // Create floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 3 + 5) + 's';
            heart.style.animationDelay = Math.random() * 2 + 's';
            document.getElementById('heartContainer').appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 8000);
        }

        // Generate hearts continuously
        setInterval(createHeart, 400);

        // Create sparkles
        function createSparkles() {
            const card = document.querySelector('.card');
            for (let i = 0; i < 20; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'sparkle';
                sparkle.style.left = Math.random() * 100 + '%';
                sparkle.style.top = Math.random() * 100 + '%';
                sparkle.style.animationDelay = Math.random() * 1.5 + 's';
                card.appendChild(sparkle);
            }
        }

        createSparkles();

        // Create particle effects
        function createParticles() {
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 4 + 's';
                document.body.appendChild(particle);
            }
        }

        createParticles();

        // Add interactive click effect
        document.addEventListener('click', (e) => {
            const burst = 5;
            for (let i = 0; i < burst; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.style.left = e.clientX + 'px';
                heart.style.top = e.clientY + 'px';
                heart.style.position = 'fixed';
                heart.style.animationDuration = '2s';
                document.body.appendChild(heart);
                
                setTimeout(() => {
                    heart.remove();
                }, 2000);
            }
        });

        // Add 3D tilt effect on mouse move
        const card = document.querySelector('.card');
        document.addEventListener('mousemove', (e) => {
            const rect = card.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = (y - centerY) / 20;
            const rotateY = (centerX - x) / 20;
            
            card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
        });

        document.addEventListener('mouseleave', () => {
            card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0)';
        });

        // PHOTO GALLERY FUNCTIONALITY
        const uploadArea = document.getElementById('uploadArea');
        const photoInput = document.getElementById('photoInput');
        const galleryContainer = document.getElementById('galleryContainer');
        const photoCounter = document.getElementById('photoCounter');
        const galleryControls = document.getElementById('galleryControls');
        const galleryDots = document.getElementById('galleryDots');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const playPauseBtn = document.getElementById('playPauseBtn');

        uploadArea.addEventListener('click', () => {
            photoInput.click();
        });

        photoInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            if (files.length > 0) {
                files.forEach(file => {
                    const reader = new FileReader();
                    reader.onload = (event) => {
                        photos.push(event.target.result);
                        if (photos.length === 1) {
                            displayPhotos();
                        }
                        updatePhotoCounter();
                        updateDots();
                    };
                    reader.readAsDataURL(file);
                });
            }
        });

        function displayPhotos() {
            if (photos.length === 0) return;

            uploadArea.classList.add('hidden');
            galleryControls.classList.remove('hidden');
            
            // Clear existing images
            const existingImages = galleryContainer.querySelectorAll('.gallery-image');
            existingImages.forEach(img => img.remove());

            // Add all photos
            photos.forEach((photo, index) => {
                const img = document.createElement('img');
                img.src = photo;
                img.className = 'gallery-image';
                if (index === currentPhotoIndex) {
                    img.classList.add('active');
                }
                galleryContainer.appendChild(img);
            });

            startSlideshow();
        }

        function showPhoto(index) {
            const images = galleryContainer.querySelectorAll('.gallery-image');
            images.forEach((img, i) => {
                img.classList.toggle('active', i === index);
            });
            currentPhotoIndex = index;
            updateDots();
        }

        function nextPhoto() {
            currentPhotoIndex = (currentPhotoIndex + 1) % photos.length;
            showPhoto(currentPhotoIndex);
        }

        function prevPhoto() {
            currentPhotoIndex = (currentPhotoIndex - 1 + photos.length) % photos.length;
            showPhoto(currentPhotoIndex);
        }

        function startSlideshow() {
            if (isPlaying) return;
            isPlaying = true;
            playPauseBtn.textContent = '‚è∏';
            slideshowInterval = setInterval(nextPhoto, 3000);
        }

        function pauseSlideshow() {
            isPlaying = false;
            playPauseBtn.textContent = '‚ñ∂Ô∏è';
            clearInterval(slideshowInterval);
        }

        function toggleSlideshow() {
            if (isPlaying) {
                pauseSlideshow();
            } else {
                startSlideshow();
            }
        }

        function updatePhotoCounter() {
            if (photos.length > 0) {
                photoCounter.textContent = `${photos.length} beautiful ${photos.length === 1 ? 'memory' : 'memories'} üíï`;
            }
        }

        function updateDots() {
            galleryDots.innerHTML = '';
            photos.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.className = 'dot';
                if (index === currentPhotoIndex) {
                    dot.classList.add('active');
                }
                dot.addEventListener('click', () => {
                    showPhoto(index);
                    pauseSlideshow();
                });
                galleryDots.appendChild(dot);
            });
        }

        prevBtn.addEventListener('click', () => {
            prevPhoto();
            pauseSlideshow();
        });

        nextBtn.addEventListener('click', () => {
            nextPhoto();
            pauseSlideshow();
        });

        playPauseBtn.addEventListener('click', toggleSlideshow);

        // MUSIC PLAYER FUNCTIONALITY
        const musicPlayBtn = document.getElementById('musicPlayBtn');
        const volumeSlider = document.getElementById('volumeSlider');
        const uploadMusicBtn = document.getElementById('uploadMusicBtn');
        const musicInput = document.getElementById('musicInput');
        const musicName = document.getElementById('musicName');

        uploadMusicBtn.addEventListener('click', () => {
            musicInput.click();
        });

        musicInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const url = URL.createObjectURL(file);
                audioPlayer.src = url;
                audioPlayer.volume = volumeSlider.value / 100;
                musicName.textContent = `üéµ ${file.name}`;
                musicPlayBtn.textContent = '‚ñ∂Ô∏è';
                isMusicPlaying = false;
            }
        });

        musicPlayBtn.addEventListener('click', () => {
            if (!audioPlayer.src) {
                alert('Please upload a song first! üéµ');
                return;
            }

            if (isMusicPlaying) {
                audioPlayer.pause();
                musicPlayBtn.textContent = '‚ñ∂Ô∏è';
                musicPlayBtn.classList.remove('playing');
            } else {
                audioPlayer.play();
                musicPlayBtn.textContent = '‚è∏';
                musicPlayBtn.classList.add('playing');
            }
            isMusicPlaying = !isMusicPlaying;
        });

        volumeSlider.addEventListener('input', (e) => {
            audioPlayer.volume = e.target.value / 100;
        });

        // Loop the music
        audioPlayer.addEventListener('ended', () => {
            audioPlayer.currentTime = 0;
            audioPlayer.play();
        });
    </script>
</body>
</html>
